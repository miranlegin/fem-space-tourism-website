---
// main layout
import Layout from '../layouts/Layout.astro';

// components
import Technology from '../components/Technology.astro';
import TechnologyImage from '../components/Technology-image.astro';

// data
import data from '../data/data.json';
const technologyData = data.technology;
---

<Layout title="Technology">
  <h1 class="page-title" data-prefix="03">Space launch 101</h1>

  <div class="articles">
    {
      technologyData.map((technology) => (
        <Technology
          name={technology.name}
          description={technology.description}
        />
      ))
    }
  </div>

  <div class="images">
    {
      technologyData.map((technology) => (
        <TechnologyImage
          name={technology.name}
          imagePortrait={technology.images.portrait}
          imageLandscape={technology.images.landscape}
        />
      ))
    }
  </div>
</Layout>

<style lang="scss">
  @import '../styles/_variables.scss';

  body {
    background-image: url(assets/technology/background-technology-mobile.jpg);

    @media (min-width: $bp-tablet) {
      background-image: url(assets/technology/background-technology-tablet.jpg);
    }

    @media (min-width: $bp-desktop) {
      background-image: url(assets/technology/background-technology-desktop.jpg);
    }
  }
</style>
